@import "../../app.wxss";

page {
  min-height: 100%;
  background-color: #f3f3f3;
}

.shop_goods_detail_img {
  width: 100%;
}

.shop_goods_detail_img image {
  width: 100%;
}

.shop_goods_detail_title {
  /* height:400rpx; */
}

.shop_goods_choosed {
  padding: 20rpx;
  margin-top: 20rpx;
  height: 100rpx;
  font-size: 30rpx;
  background: #fff;
}

.shop_goods_title {
  background: #fff;
  font-size: 30rpx;
}

.shop_goods_tit {
  padding: 20rpx;
  width: 600rpx;
}

.shop_goods_favorite {
  width: 100rpx;
  text-align: center;
}

.title_icon {
  font-weight: bold;
  font-size: 42rpx;
}

.shop_goods_title_price {
  padding: 10rpx 20rpx;
  color: #eb4d4d;
}

.shop_goods_evaluation {
  background: #fff;
  margin-top: 20rpx;
  padding: 0 20rpx;
}

.shop_goods_evaluation_title {
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}

.shop_goods_evaluation_name {
  font-size: 30rpx;
  color: #aaa;
}

.shop_goods_evaluation_content {
  font-size: 30rpx;
}

.shop_goods_evaluation_box {
  background: #fff;
  border-bottom: 2rpx solid #aaa;
}

.shop_goods_evaluation_imglist {
  height: 180rpx;
  margin-top: 20rpx;
  background: #fff;
}

.shop_goods_evaluation_img image {
  margin-right: 10rpx;
  width: 150rpx;
  height: 150rpx;
}
.active_null{
  height:50rpx;line-height:50rpx; margin-right:30rpx;width:150rpx;background:#f5f5f5
}
.active{
  height:46rpx;line-height:46rpx; margin-right:30rpx;width:150rpx;border:2rpx solid #fdbb51;color:#fdbb51
}
.cart_contain {
  background: #fff;
}

.cart_img image {
  width: 170rpx;
  height: 170rpx;
}

.cart_title_price {
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.cart_price {
  margin-left: 30rpx;
  margin-top: 40rpx;
}

.shop_goods_btn view {
  color: #fff;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  width: 50%;
}

.shop_goods_addbtn {
  background: #f6b245;
}

.shop_goods_buybtn {
  background: #f64d45;
}

.buy-num-box {
  display: flex;
  justify-content: space-between;
  padding: 8rpx 10rpx 10rpx 0;
  margin-left: 30rpx;
  margin-top: 10rpx;
  align-items: center;
}

.num-label {
  font-size: 26rpx;
  color: #000;
}

.buy-num-box .num-box {
  display: flex;
}

.buy-num-box .num-box .num-jian, .buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia {
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}

.buy-num-box .num-box .num-input {
  font-size: 28rpx;
}

.buy-num-box .num-box .num-input input {
  height: 100%;
}

.popup-join-btn {
  width: 100%;
  height: 89rpx;
  text-align: center;
  line-height: 89rpx;
  font-size: 34rpx;
  color: #fff;
  background-color: #e64340;
}

.buy-num-box .num-box .hui {
  background-color: #f5f5f9;
}
