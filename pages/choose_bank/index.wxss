/* pages/choose_bank/index.wxss */
.choose_bank_title{
  font-size: 23rpx;
  padding-left: 30rpx;
  width: 100%;
  height: 70rpx;
  background: #75a8f3;
  line-height: 70rpx;
  color: #fff;
  box-sizing: border-box;
  overflow: hidden;
}
.bank_list{
  height: 100rpx;
  border-bottom: 1rpx solid #eee;
  width: 92%;
  background-size: 100% 100%;
  margin: 0 auto;
  box-sizing: border-box;
}
.bank_logo{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  vertical-align: middle;
  margin:30rpx 20rpx 20rpx 0rpx
}
.bank_logo image{
  width: 100%;
  height: 100%;
}
.bank_name{
  display: inline-block;
  vertical-align: middle;
  font-size: 27rpx;
  padding-top: 10rpx
}
.chose_bank{
  float: right;
  font-size: 55rpx;
  padding:10rpx 0rpx 20rpx 0rpx;
  color:#ccc;
  height: 30rpx;
  width: 20rpx;
}
.chose_bank image{
  width: 100%;
  height: 100%
}
.close{
  float: right;
  height: 28rpx;
  width: 28rpx;
  line-height: 28rpx;
  text-align: center;
  border: 2rpx solid #b4d5ff;
  color: #b4d5ff;
  font-size: 22rpx;
  margin: 21rpx 30rpx 0rpx 0rpx;
  border-radius: 50%;
}
.title_close{
  display: none;
}