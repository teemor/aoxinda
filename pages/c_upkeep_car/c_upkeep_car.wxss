.paymentinfo {
  height: 100rpx;
  width: 100%;
  overflow: hidden;
}

.paymentinfo-left {
  width: 66.7%;
  height: 100rpx;
  background-color: #2d3c4b;
  float: left;
}

.paymentinfo-right {
  width: 33.3%;
  height: 100rpx;
  background-color: #5d8fcb;
  float: right;
}

.shopimg {
  position: relative;
}

.red-point {
  position: absolute;
  color: #fff;
  top: 5rpx;
  font-size: 20rpx;
  right: -8rpx;
  background-color: #ff4040;
  height: 30rpx;
  line-height: 30rpx;
  width: 30rpx;
  text-align: center;
  border-radius: 50%;
}

.shopimg image {
  width: 80rpx;
  height: 80rpx;
  padding: 10rpx 0 0 50rpx;
}

.paymentinfo-right {
  color: #fff;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}

.money {
  color: #ff4040;
  line-height: 100rpx;
  padding: 0 20rpx 0 30rpx;
  font-size: 36rpx;
}

