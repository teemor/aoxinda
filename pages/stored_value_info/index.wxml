<view class='card_top'>
  <view class='card_bag' style='background-image:url(https://maichefu.oss-cn-beijing.aliyuncs.com/ToShop/card_bg.png)'>
    <view class='card_bag_top'>
      <view class='card_title'>{{cardInfo.card_name}}</view>
      <view class='card_info'>{{cardInfo.card_no}}</view>
    </view>
    <view class='card_bag_bottom'>
      <view class='card_bm_info'>
        <view class='card_price'>
          <text class='card_price_title'>可用余额</text>
          <text>￥{{cardInfo.use_total}}</text>
        </view>
        <view class='card_time'>适用于麦车服所有门店</view>
      </view>
    </view>
  </view>
  <view class='card_bag_'>
    <view class='code_box'>
      <!-- 存放二维码的图片-->
      <image mode="scaleToFill" src="{{imagePath}}" class='wx_code'></image>
      <view mode="aspectFit" class='wx_code_bg'></view>
      <!-- 画布，用来画二维码，只用来站位，不用来显示-->
      <view class="canvas-box">
        <canvas hidden="{{canvasHidden}}" style="width: 686rpx;height: 686rpx;" canvas-id="canvas" />
      </view>
    </view>
    <view class='wx_code_text'>消费码 {{cardInfo.card_no}}</view>
  </view>
  <view class='card_share'>
    <navigator url='../stored_value_recharge/index?id={{cardInfo.account_id}}&min_pay={{min_pay}}' style='display:inline'><text class='share_btn'>充值</text></navigator>
    <button class='share_btn_share'  plain='true' open-type='share'>邀请好友</button>
  </view>
</view>
