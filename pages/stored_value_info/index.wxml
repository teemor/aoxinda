<view class='card_record card_item'>
  <van-tabs active="{{ active }}" bind:change="onTabChange"  color="#5a97ef">
    <van-tab title="消费记录"  style="width:150px">
    <view class='box' >
    <view wx:if="{{payInfo.length<1}}"  style="height:300rpx"> <image src="../../common/image/refund_null.png" style="width:220rpx;height:182rpx;" class="no_record"></image><text style="display:inline-block;text-align:center;width:100%;line-height:30rpx;font-size:28rpx">暂无记录</text> </view>
      <view class='address' wx:for="{{payInfo}}" wx:key="{{index}}">
        <navigator url='../my_order_detail/index?id={{item.order_num}}'  class='record_box'>
        <view class='consume_details_item'>
          <view class='record_box_title'>{{item.ser_name}}</view>
          <view class='go_consume_details'>></view>
          <view class='deduct_money'>-￥{{item.money}}</view>
          
        </view>
        <view class='consume_details_item'>
          <view class='consume_details_title'>订单号:{{item.order_num}}</view>
          <view class='consume_details_time'>{{item.pay_at}}</view>
        </view>
        </navigator>
      </view>
    </view>
      
    </van-tab>
    <van-tab title="充值记录" >
    <!-- <scroll-view bindscrolltolower="loadMore" scroll-y="true" lower-threshold="100" enable-back-to-top="true"> -->
    <view class='top_up_box'>
    <view wx:if="{{rechargeInfo.length < 1}}"  style="height:300rpx"> <image src="../../common/image/refund_null.png" style="width:220rpx;height:182rpx;" class="no_record"></image><text style="display:inline-block;text-align:center;width:100%;line-height:30rpx;font-size:28rpx">暂无记录</text> </view>
      <view class='address' wx:for="{{rechargeInfo}}" wx:key="{{index}}">
        <view class='record_box'>
          <view class='record_box_title'>{{item.pay_at}}</view>
          <view class='record_box_time'>￥{{item.money}}</view>
        </view>
      </view>
    </view>
    <!-- </scroll-view> -->
    </van-tab>
    <van-tab  title="退款记录">
    <view class='box'>
    <view wx:if="{{refundInfo.length<1}}"  style="height:300rpx"> <image src="../../common/image/refund_null.png" style="width:220rpx;height:182rpx;" class="no_record"></image><text style="display:inline-block;text-align:center;width:100%;line-height:30rpx;font-size:28rpx">暂无记录</text> </view>
    <view class='address' wx:for="{{refundInfo}}" wx:key="{{index}}">
      <navigator url='../my_order_refund_detail/index?id={{item.refund_num}}'  class='record_box'>
        <view class='consume_details_item'>
          <view class='record_box_title'>{{item.actName}}</view>
          <view class='go_consume_details'>></view>
          <view class='deduct_money'>+￥{{item.money}}</view>
          
        </view>
        <view class='consume_details_item'>
          <view class='consume_details_title'>退款号:{{item.refund_num}}</view>
          <view class='consume_details_time'>{{item.pay_at}}</view>
        </view>
      </navigator>
    </view>
    </view>
    </van-tab>
  </van-tabs>
</view>

