/* 提示 */

.choose_wrap {
  width: 600rpx;
  text-align: center;
  margin: 150rpx auto;
}

.choose_bgm {
  height: 392rpx;
  width: 346rpx;
  margin: auto;
  margin-bottom: 30rpx;
}

.choose_btn {
  background: #f6b245;
  border-radius: 30rpx;
  font-size: 30rpx;
  color: #fff;
}

/* 提示 */

.hidden {
  display: none;
}

.noshop {
  font-size: 30rpx;
  margin-top: 150rpx;
  text-align: center;
}

/* 门店 */

.sp-box {
  height: 160rpx;
  background: #fff;
  display: flex;
  color: #797979;
}

.sp-logo {
  width: 150rpx;
  height: 130rpx;
  margin-top: 20rpx;
}

.sp-logo image {
  width: 150rpx;
  height: 130rpx;
}

.sp-text {
  margin-left: 30rpx;
  width: 73%;
}

.sp-text-title, .sp-text-count, .sp-text-location {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  position: relative;
}

.sp-text-title-right {
  position: absolute;
  right: 0;
  top: 0;
}

.sp-text-count-left {
  display: flex;
}

.sp-text-count-left image {
  height: 50rpx;
  width: 50rpx;
  margin-left: -10rpx;
}

.sp-text-count-right {
  position: absolute;
  right: 0;
  top: 2rpx;
}

.sp-text-location-left {
  width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sp-text-location-right {
  position: absolute;
  right: 0;
  top: 4rpx;
  font-size: 20rpx;
}

.technician-list-box {
  border-bottom: 1px solid #e5e5e5;
}
