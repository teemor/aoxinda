/* pages/order_details/index.wxss */

.state {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: gainsboro;
  color: #fff;
  padding-left: 5%;
}

.header>view>view {
  display: inline-block;
  vertical-align: middle;
}

.header_portrait {
  height: 40rpx;
  width: 40rpx;
}

.header_portrait image {
  width: 100%;
  height: 100%;
}

.phone {
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin-right: 5%;
  margin-top: 2%;
}

.alarm_clock {
  width: 25rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.alarm_clock image {
  width: 100%;
  height: 100%;
}

.phone image {
  width: 100%;
  height: 100%;
}

.header {
  width: 100%;
  border-bottom: 20rpx solid #f5f5f5;
  height: 134rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
  font-size: 27rpx;
}

.arow {
  display: flex;
  justify-content: space-between;
  width: 90%;
  height: 70rpx;
  line-height: 70rpx;
  margin: 0 auto;
}

.content_box {
  width: 100%;
  border-bottom: 20rpx solid #f5f5f5;
  font-size: 28rpx;
  overflow: hidden;
}

.content_box_refund {
  width: 100%;
  font-size: 28rpx;
  overflow: hidden;
}

.content_box_trie {
  width: 100%;
  font-size: 28rpx;
  overflow: hidden;
}

.cost {
  color: red;
  font-size: 30rpx;
}

.content_box_title {
  font-weight: 600;
  position: relative;
  border-bottom: 1rpx solid #f5f5f5;
}

.content_box_title_left {
  position: absolute;
  width: 2rpx;
  height: 30rpx;
  background: #5a97ef;
  left: -10rpx;
  top: 20rpx;
}

.service_type>view {
  display: inline-block;
  vertical-align: middle;
}

.service_type {
  width: 90%;
  margin: 0 auto;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  box-sizing: border-box;
}

.arow_last {
  display: flex;
  justify-content: space-between;
  width: 90%;
  line-height: 70rpx;
  margin: 0 auto;
}

.arow_last_trie {
  display: flex;
  justify-content: space-between;
  width: 90%;
  line-height: 70rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #eee;
}

.radioo {
  display: block;
  border-bottom: 1px solid #ddd;
  padding: 5px;
  font-size: 28rpx;
}

radio {
  transform: scale(0.9);
}

.cell_piacure {
  width: 100rpx;
  height: 100rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 50rpx;
}

.cell_piacure image {
  width: 100%;
  height: 100%;
}

.cell_content {
  display: inline-block;
  height: 100rpx;
  vertical-align: middle;
  margin-left: 50rpx;
  width: 400rpx;
}

.cell_title {
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  width: 100%;
}

.cell_price {
  line-height: 50rpx;
  color: red;
}

.more {
  width: 90%;
  margin: 0 auto;
  text-align: center;
  line-height: 60rpx;
}

.new_add_item {
  width: 90%;
  margin: 0 auto;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  box-sizing: border-box;
}

.new_add_item>view {
  display: inline-block;
  vertical-align: middle;
}

.start_once {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #fff;
  background: #5a97ef;
  text-align: center;
  display: inline-block;
  margin-left: 10rpx;
}

.order_header {
  width: 100%;
  height: 155rpx;
  background-size: 100% 100%;
  overflow: hidden
}

.order_header_image {
  width: 100%;
}

.up {
  font-size: 21rpx;
  line-height: 20rpx;
}

.delete {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  overflow: auto;
  display: none;
}

.operation {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 30rpx;
  color: #3478f6;
}

.excuse {
  width: 90%;
  position: absolute;
  bottom: 2%;
  text-align: center;
  left: 5%;
}

.delete_title {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #e4e4e4;
}

.unbundle {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 38rpx;
  border-bottom: 1rpx solid #e4e4e4;
  color: #ea4e3d;
}

.modification {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 38rpx;
  color: #3478f6;
}

.cancel {
  background: #fff;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 30rpx;
  font-size: 38rpx;
  color: #3478f6;
  font-weight: 600;
}

.ok {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  overflow: auto;
  display: none;
}

.ok_box {
  background: #fff;
  height: 160rpx;
  width: 70%;
  border-radius: 10rpx;
  font-size: 23rpx;
  box-sizing: border-box;
  position: absolute;
  left: 15%;
  top: 35%;
  padding: 20rpx;
}

.ok_text {
  display: inline-block;
  vertical-align: middle;
}

.replace_battery {
  padding: 0rpx 10rpx;
  height: 42rpx;
  line-height: 42rpx;
  background: #3478f6;
  color: #fff;
  text-align: center;
  border-radius: 3rpx;
  margin-top: 10rpx;
}
.gogogo{
  width: 10rpx;
  height: 20rpx;
  float: right;
margin-left: 20rpx;

}
.gogogo image{
  width: 100%;
  height: 100%;
}
.content_little{
  font-size: 23rpx;
  color: #666;
}
.header_title{
  line-height: 35rpx;
}
.order_status_title{
  color: #fff;
  font-size: 28rpx;
  line-height: 70rpx;
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
  padding-left: 5%
}
.order_status_text{
  height: 40rpx;
  font-size: 24rpx;
  width: 90%;
  margin: 0 auto;
  color: #fff;
  padding-left: 5%
}
.order_status_img{
  width: 85rpx;
  height: 90rpx;
  margin-top: -95rpx;
  float: right;
  margin-right: 10%;
}