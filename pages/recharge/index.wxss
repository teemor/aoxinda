page {
  background-color: #f3f3f3;
}

.recharge {
  border-top: 1rpx solid #eee;
}

.recharge_box {
  padding: 50rpx 40rpx 0;
  background-color: #fff;
}

.recharge_box .title {
  font-size: 34rpx;
}

.recharge_box .title text {
  font-size: 32rpx;
  color: #999;
}

.recharge_box .money_box, .recharge_box .pay_box {
  display: flex;
  align-items: center;
}

.recharge_box .money_box {
  padding: 20rpx 0;
  font-size: 60rpx;
  line-height: 140rpx;
  border-bottom: 1rpx solid #eee;
}

.recharge_box .money_box .money_icon {
  padding-right: 30rpx;
  font-weight: bold;
}

.recharge_box .money_box .money_input_box {
  flex: 1;
}

.recharge_box .money_box .money_input_box .money_input {
  height: 140rpx;
}

.recharge_box .error_message {
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #f41;
}

.recharge_box .pay_box {
  padding: 30rpx 0;
  font-size: 28rpx;
}

.recharge_box .pay_box .pay_type {
  flex: 1;
  vertical-align: middle;
}

.recharge_box .pay_box .pay_type image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.recharge_box .pay_box .pay_type text {
  margin-left: 10rpx;
}

.recharge_box .pay_box .pay_icon {
  transform: scale(1.2);
  color: #07c160;
}

.recharge .next_button {
  margin: 70rpx 80rpx;
  width: auto;
  display: block;
  height: 80rpx;
  line-height: 78rpx;
}

_popup_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  line-height: 30rpx;
  color: #5a97ef;
  border-bottom: 1px solid #ebedf0;
}

._popup_top ._popup_title {
  color: #333;
}

._popup_cont {
  padding: 0 10rpx 40rpx;
  background-color: #f0f3f6;
}
