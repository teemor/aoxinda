.goodslist-text{
  height: 80rpx;
  line-height: 80rpx;
}
.goodslist-price-list{
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
}
.goodslist-count{
  position: absolute;
  right: 0
}
/* 发票 */
.discount{
  margin-top: 10rpx;
  background-color: #fff;
}
.discount-list{
  height: 100rpx;
  line-height: 100rpx;
  padding:0 30rpx; 
  font-size: 30rpx;
}
.discount-text{
  float:left;
}
.discount-info{
  display: inline-block;
  position: absolute;
  right: 80rpx;
}
.list-arrow{
  height: 25rpx;
  width: 25rpx;
}
.arrow-wrap{
  float:right;
  line-height: 100rpx;
}
/* 底部付款 */
.payment{
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  position: fixed;
  bottom: 0;
}
.payment-left{
  height: 100rpx;
  line-height: 100rpx;
  width: 66.7%;
  background-color:#2d3c4b;
  float: left;
  display: inline-block;
  color:#ff3c3c;
  font-size:32rpx; 
}
.payment-right{
 height: 100rpx;
 line-height: 100rpx;
 text-align: center;
 color:#fff;
 width: 33.3%;
 float: right;
  background-color:#5d8fcb;
}
.payment-text{padding-left: 30rpx;}
.payment-price{font-size: 50rpx;}