page{
  background-color:#f3f3f3;
}

/* 头部 */
.userinfo{
  height: 186rpx;
  width: 100%;
  background-color: #fff;
  font-size: 32rpx;
}
.user{
  height: 93rpx;
  line-height: 93rpx;
  border-bottom: 1rpx solid #dcdcdc;
  display: flex;
  padding: 0 30rpx; 
}
.user input{width: 300rpx;padding-left: 20rpx;margin-top: 20rpx;}
.arrow{
  height: 25rpx;
  width: 25rpx;
  float: right;
}
.useraddress{
  height: 93rpx;
  line-height: 93rpx;
  padding:0 30rpx; 
}
.userimg{
  height: 45rpx;
  width: 45rpx;
  margin-top: 25rpx;
}
.useraddress .addressinfo{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  padding-left: 20rpx;
  width: 70%;
  display: inline-block;
}

/* 商品 */
.goods{
  margin-top: 30rpx;
  background-color: #fff;
}
.goodslist{
  width: 90%;
  height: 160rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #dcdcdc;
  font-size: 30rpx;
}
