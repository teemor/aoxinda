/* pages/th_order/th_order_all/th_order_all.wxss */
#order_all .picker-box {
  position: relative;
}
#order_all .picker {
  border: 1px solid #ccc;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-radius: 6rpx;
}
#order_all .calendar {
  position: absolute;
  top: 8rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
#order_all .tab-list-box .tab-item {
  width: 16.6%;
}
#order_all .list-box {
  height: 140rpx;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 3rpx 3rpx 5rpx #f1f1f1,
              -3rpx -3rpx 5rpx #f1f1f1;
  margin-bottom: 20rpx;
}
#order_all .list-box view {
  padding-top: 10rpx;
}
#order_all .list-box .status {
  top: 10rpx;
  right: 10rpx;
}
#order_all .list-box .ispay{
  top: 50rpx;
  right: 10rpx;
}
#order_all .list-box .payment{
  top: 100rpx;
  right: 10rpx;
}
#order_all .list-box .score{
  top: 130rpx;
  right: 10rpx;
  padding: 5rpx 20rpx;
  border-radius: 10rpx;
}
.sp_logo{
  height:130rpx;
  width:160rpx;
