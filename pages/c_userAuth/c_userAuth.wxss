  width: 600rpx;
  text-align: center;
  margin: 150rpx auto;
}

.choose_bgm{
  height: 392rpx;
  width: 346rpx;
  margin: auto;
  margin-bottom: 30rpx;
}

.choose_txt{
  width: 100%;
  font-size: 34rpx;
  line-height: 60rpx;
