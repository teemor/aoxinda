<!--pages/my_bank_card/index.wxml-->
<view class="add_bank no_card {{add_bank == '0' ?'add_bank_show':''}}">
  <view class='no_card_image'><image src="../../common/image/my_refund.png" /></view>
  <view class='no_card_title'>您还没有添加银行卡</view>
</view>
<view class="add_bank have_card {{add_bank == '1' ?'add_bank_show':''}}">
  <view class='have_card_list' wx:for="{{cardList}}" wx:key="{{item}}"></view>
  <view class='add_card' bindtap='addBankCard'>
    <view class="add_card_image"><image src="../../common/image/my_refund.png" /></view>
    <view class='add_card_title'>添加银行卡</view>
  </view>
</view>