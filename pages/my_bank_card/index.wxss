/* pages/my_bank_card/index.wxss */
.add_bank{
  display: none
}
.add_bank_show{
  display: block
}
.no_card{
  width: 100%;
  height: 400rpx;
  margin-top: 210rpx;
  background-size: 100% 100%;
}
.no_card_image{
  width: 200rpx;
  height: 50rpx;
  margin: 0 auto;
}
.no_card_image image{
  width: 100%;
  height: 100%;
}
.no_card_title{
  margin: 0 auto;
  text-align: center;
  width: 100%;
  line-height: 50rpx;
  font-size: 27rpx;
  color: #353739;
  padding-top:265rpx
}
.no_card_title_gray{
  margin: 0 auto;
  text-align: center;
  width: 100%;
  line-height: 50rpx;
  font-size: 25rpx;
  color: #b4b5b6;
}
.have_card{
  width: 100%;
  height: initial;
  margin-top: 38rpx;
}
.have_card_list{
  width: 95%;
  margin: 0 auto;
  height: 200rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  background-size: 100%;
  position: relative;
}
.add_card{
  width: 95%;
  margin: 0 auto;
  height: 200rpx;
  border-radius: 20rpx;
}
.add_card_image{
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}
.add_card_image image{
  width: 100%;
  height: 100%; 
}
.add_card_title{
  margin: 0 auto;
  text-align: center;
  width: 100%;
  line-height: 200rpx;
  font-size: 30rpx;
  color: #fff;
  background-size: 100%;
  margin-bottom: 20rpx;
}
.add_card_title image{
  width: 28rpx;
  height: 28rpx;
  padding-right: 10rpx;
}
.add{
  font-size: 35rpx;
}
.card_logo{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 30rpx;
  left: 50rpx;
}
.card_logo image{
  width: 100%;
  height: 100%;
}
.card_name{
  font-size: 31rpx;
  color: #fff;
  font-weight: 600;
  position: absolute;
  top: 18%;
  left: 25%;
}
.card_type{
  font-size: 27rpx;
  position: absolute;
  color: #fff;
  top: 45%;
  left: 25%;
}
.card_number{
  font-size: 27rpx;
  position: absolute;
  color: #fff;
  top: 75%;
  left: 25%;
}
.delete{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  overflow: auto;
  display: none;
}
.cancel{
  background: #fff;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 30rpx;
  font-size: 38rpx;
  color: #3478f6;
  font-weight: 600
}
.operation{
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 30rpx;
  color: #3478f6;
}
.excuse{
  width: 90%;
  position: absolute;
  bottom: 2%;
  text-align: center;
  left: 5%
}
.delete_title{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #e4e4e4;
}
.unbundle{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 38rpx;
  border-bottom: 1rpx solid #e4e4e4;
  color: #ea4e3d;
}
.modification{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 38rpx;
  color: #3478f6;
}
.default{
  position: absolute;
  top:23rpx;
  right: 52rpx;
  width: 56rpx;
  height: 32rpx;
  font-size: 19rpx;
  background: rgba(255, 255, 255, 0.2);
  line-height: 32rpx;
  color: #fff;
  text-align: center;
}
.ok{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  overflow: auto;
  display: none;
}
.ok_box{
  background: #fff;
  height: 157rpx;
  width: 220rpx;
  border-radius: 10rpx;
  font-size: 23rpx;
  padding-top: 60rpx;
  padding-left: 50rpx;
  box-sizing: border-box;
  position: absolute;
  left: 35%;
  top: 35%;
}
.deleat{
  display: block;
}
.ok_image{
  width: 27rpx;
  height: 27rpx;
  display: inline-block;
  vertical-align: middle;
}
.ok_image image{
  width: 100%;
  height: 100%
}
.ok_text{
  display: inline-block;
  vertical-align: middle
}