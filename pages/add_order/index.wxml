<view class="location_contain" bindtap="locationBtn">
  <view class="fl location_img">
    <image src="../../common/image/location.png" />
  </view>
  <view class="fl location_address" style="{{storeTotal==0?'':'height:100rpx;line-height:100rpx'}}">
    <view>{{name===undefined?'收货人信息':name}}  <text style='margin-left:20rpx'>{{phone}}</text></view>
    <view class="location_mes" wx:if="{{storeTotal==0}}">{{address===undefined?'填写收货地址信息':address}}</view>
  </view>
  <view class="fr location_address_btn">
    <image src="http://maichefu.oss-cn-beijing.aliyuncs.com/ToShop/right_arrow.png" />
  </view>
</view>

<view>
<view  wx:if="{{goods==false}}" >
<view wx:for="{{goodsList}}" wx:key="{{item}}">
    <my_order_list ispay="{{ispay}}"  goodsList="{{item?item:goodsList}}"/></view>
  </view>
<view wx:else>
 <my_order_list ispay="{{ispay}}"  goodsList="{{goodsItem}}"/>
</view>
  
  <view>
  </view>
</view>
<view style="background:#fff">
  <van-cell title="配送方式" value="普通快递" ></van-cell>
