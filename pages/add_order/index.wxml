<view>
  <view class="mtop20">
    <van-cell title="商品总价" value="¥{{total}}" />
    <van-cell title="服务费" value="+¥{{storeTotal}}" />
    <van-cell title="运费" value="+¥0" />
    <view class="order_total" >
    <view class="fr ">
      <view class="grey fz26 fl order_total_num">共{{sum}}件商品</view>
      <view class="fl fz30">小计：
      <span class="red fz30">¥{{total + storeTotal}}</span>
      </view>
    </view>
    </view>
