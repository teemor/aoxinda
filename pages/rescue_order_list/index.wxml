  <van-tab title="电瓶 " title-style="font-size:30rpx;line-height:54rpx; ">
    <view class='title_box'>
      <view class="title_item {{batteryShow==0 ? 'show': ''}} " bindtap='batteryZero'>全部订单</view>
      <view class="title_item {{batteryShow==1 ? 'show': ''}} " bindtap='batteryFirst'>待付款</view>
      <view class="title_item {{batteryShow==2 ? 'show': ''}} " bindtap='batterySecond'>待安装</view>
      <view class="title_item {{batteryShow==3 ? 'show': ''}} " bindtap='batteryThird'>已安装</view>
    </view>
    <view class="content_item {{batteryShow==0 ? 'content_item_show': ''}} ">
