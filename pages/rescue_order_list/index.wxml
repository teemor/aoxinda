        <view class='redundant'></view>
        <view class='battery_title'>
          <view class='service_number'>订单编号:{{item.order_code}}</view>
          <view class='service_course'>{{item.order_status}}</view>
        </view>
        <view class="battery_information ">
          <view class="battery_information_img ">
            <image src="{{item.path}}"></image>
          </view>
          <view class="battery_information_box ">
            <view class="battery_name ">{{item.goodsData[0].goods_name}}</view>
            <view class="battery_price ">￥{{item.goodsData[0].goods_price}}</view>
          </view>
          <view class="battery_num ">×{{item.goodsData[0].goods_num}}</view>
        </view>
        <view class="foot">
          <text class="goods_number">共{{item.count}}项商品</text>
          <text class="foot_titile">小计：</text>
          <text class="goods_price_total">￥{{item.pay_money}}</text>
          <view bindtap="payment" class="payment" wx:if="{{item.order_status == '待付款'}}">去付款</view>
          <view bindtap="payment" class="payment" wx:if="{{item.order_status == '已安装'}}">晒单评价</view>
        </view>
      </view>
    </view>
