page {
  width: 100%;
  height: 100%;
  background-color: #211989;
}

view {
  box-sizing: border-box;
}

image {
  display: block;
  width: 0;
  height: 0;
}

.clearfix::after {
  content: "";
  display: block;
  clear: both;
}

.news_manners {
  padding-bottom: 110rpx;
  width: 100%;
  background-color: #211989;
}

.manners_btn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #4835f8;
  background-color: #ffcf4a;
}

.top_box {
  position: relative;
}

image.logo {
  position: absolute;
  left: 32rpx;
  top: 30rpx;
  width: 134rpx;
  height: 32rpx;
  z-index: 2;
}

.titlebg_box {
  position: relative;
  width: 100%;
}

.titlebg_box image {
  width: 100%;
  height: 480rpx;
}

image.titlebg2 {
  height: 380rpx;
}

.titlebg_box image.user_img {
  position: absolute;
  left: 50%;
  bottom: 50%;
  margin-left: -40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.titlebg_box .user_info {
  position: absolute;
  left: 0;
  bottom: 20%;
  width: 100%;
  font-size: 34rpx;
  font-weight: bold;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  text-shadow: 5rpx 5rpx 8rpx rgba(255, 255, 255, 0.5);
}

.box_pd {
  padding: 0 30rpx;
  width: 100%;
}

.box_pd_card {
  position: relative;
  top: -20rpx;
  width: 100%;
  height: 374rpx;
  font-size: 18px;
  color: rgba(255, 255, 255, 0.5);
}

image.card {
  width: 100%;
  height: 100%;
}

.box_pd_card .card_old_price {
  position: absolute;
  left: 90px;
  bottom: 60px;
  text-decoration: line-through;
}

.box_pd_card .card_time {
  position: absolute;
  left: 24px;
  bottom: 20px;
  font-size: 17px;
}

image.title {
  margin: 40rpx auto 80rpx;
  width: 312rpx;
  height: 33rpx;
}

image.title_qy {
  margin: 0 auto;
  width: 220rpx;
  height: 62rpx;
}

image.title_md {
  margin: 0 auto;
  padding-top: 32rpx;
  width: 197rpx;
  height: 43rpx;
}

image.title_md_all {
  position: absolute;
  right: 10rpx;
  top: 30rpx;
  width: 90rpx;
  height: 60rpx;
}

.service_items {
  position: relative;
  margin-bottom: 22rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.service_bg {
  position: absolute;
  left: 1%;
  top: -8rpx;
  width: 98%;
  height: 20rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx 20rpx 0 0;
}

.service_img_bg {
  position: absolute;
  left: 0;
  top: -38rpx;
  width: 100%;
  height: 42rpx;
  overflow: hidden;
}

.service_img_bg ._bg {
  margin: 0 auto;
  width: 88%;
  height: 14rpx;
  background-color: rgba(255, 255, 255, 0.4);
  border-radius: 20rpx 20rpx 0 0;
  opacity: 0.5;
}

.service_img_bg ._bg:nth-child(2) {
  width: 92%;
  background-color: rgba(255, 255, 255, 0.6);
}

.service_img_bg ._bg:nth-child(3) {
  width: 96%;
  background-color: rgba(255, 255, 255, 0.8);
}

.service_item_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.service_item {
  position: relative;
  margin-bottom: 20rpx;
  width: 100%;
  height: 120rpx;
  color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.service_item._half {
  width: 48%;
}

.service_item ._item_bg {
  width: 100%;
  height: 100%;
}

.service_item ._item_box {
  position: absolute;
  left: 0;
  top: 0;
  padding: 20rpx;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.service_item ._item_icon {
  margin-right: 30rpx;
  width: 70rpx;
  height: 70rpx;
}

.service_item ._item_cont {
  flex: 1;
  overflow: hidden;
}

.service_item ._item_ser_name {
  margin-bottom: 10rpx;
  width: 100%;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.service_item ._item_old_price {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.service_item ._item_del_price {
  text-decoration: line-through;
}

.manners_box {
  padding: 0 50rpx 15rpx;
  margin-bottom: 22rpx;
  width: 100%;
  border-radius: 20rpx;
  background-color: #fff;
}

.manners_box._manners_box {
  padding: 0 20rpx 15rpx;
}

.manners_box>.title {
  position: relative;
  margin-bottom: 55rpx;
  text-align: center;
}

.manners_box>.title text {
  display: inline-block;
  width: 218rpx;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  background-color: #211989;
}

.manners_box>.content {
  margin-bottom: 52rpx;
  text-align: center;
  line-height: 1;
}

.manners_box>.content .titleText {
  margin-bottom: 18rpx;
  font-size: 24rpx;
}

.manners_box>.content .subText {
  font-size: 22rpx;
  color: #999;
}

.manners_box .bottomCont {
  padding-bottom: 62rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.manners_box .bottomCont .item {
  position: relative;
  width: 166rpx;
  height: 120rpx;
  text-align: center;
}

.manners_box .bottomCont .item>image {
  margin: 0 auto;
  width: 130rpx;
  height: 120rpx;
}

.manners_box .bottomCont .item>.text {
  position: absolute;
  left: 0;
  bottom: -62rpx;
  width: 100%;
  font-size: 24rpx;
  line-height: 42rpx;
}

.manners_box .bottomCont .arrow {
  margin: 45rpx 36rpx;
  width: 18rpx;
  height: 30rpx;
}

.manners_box .address {
  position: relative;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1px dashed #4835f8;
}

.manners_box .address:last-child {
  border-bottom: none;
}

.address .address_num {
  position: absolute;
  left: -22rpx;
  top: 20rpx;
  width: 60rpx;
  height: 52rpx;
  text-align: center;
  line-height: 52rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  background-color: #ffcf4a;
  border-radius: 0 8rpx 8rpx 0;
}

.address .address_title {
  padding-left: 60rpx;
  font-size: 26rpx;
  line-height: 52rpx;
  font-weight: 700;
  color: #4835f8;
}

.address .address_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 96rpx;
  font-size: 24rpx;
  line-height: 48rpx;
}

.address .address_box .cont_text {
  color: #999;
}

.address .address_box .location {
  margin: 0 15rpx;
  width: 40rpx;
  height: 60rpx;
  border-color: #211989;
}

.address .address_box .address_cont {
  flex: 1;
}

.address .address_box .phone {
  margin-left: 15rpx;
  padding-left: 20rpx;
  width: 70rpx;
  height: 60rpx;
  border-left: 1px solid #999;
}

page .dialog-index--van-dialog {
  background-color: transparent !important;
}

page .van-dialog__footer {
  display: none;
}

.manners_dialog {
  display: block;
  margin: 0 auto;
  width: 550rpx;
  height: 600rpx;
}

.manners_dialog_btn {
  position: relative;
  top: -120rpx;
  display: block;
  margin: 0 auto;
  width: 300rpx;
  height: 120rpx;
}
