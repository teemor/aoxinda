/**login.wxss**/
page{
background: #5b97ef;
}
#sa_login{
  position: relative;
}

.application{
  font-size: 24rpx;
  line-height: 24rpx;
  color: #ffffff;
  position: absolute;
  right:28rpx;
  top: 20rpx;
  border-bottom: 1px solid #ffffff;
}

.login_logo_wrap {
  height: 400rpx;
  width: 570rpx;
  margin: auto;
  margin-top: 100rpx;
  overflow: hidden;
}

.login_logo {
  height: 100%;
  width: 100%;
}

.logo_name {
  width: 100%;
  margin-top: 160rpx;
  font-size: 70rpx;
  font-family: 'Times New Roman', Times, serif;
  text-align: center;
  color: #ffffff;
  overflow: hidden;
}

.login_btn {
  height: 90rpx;
  width: 600rpx;
  font-size: 38rpx;
  line-height: 90rpx;
  border-radius: 50rpx;
  margin: auto;
  margin-top: 200rpx;
  background: #f6b245;
  box-shadow: 2rpx 8rpx 10rpx #5689d2;
  color: #fff;
  text-align: center;
  overflow: hidden;
}

button::after{
  border: 0;
}

.getUserPhone_wrap {
  width: 100%;
  min-height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 3;
}

.getPhoneMask {
  width: 70%;
  padding: 70rpx;
  box-sizing: border-box;
  background: #fff;
  overflow: hidden;
  margin: auto;
  margin-top: 200rpx;
  border-radius: 22rpx;
}

.wxChatLogo_wrap {
  height: 220rpx;
  width: 220rpx;
  margin: auto;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.wxChatLogo {
  height: 100%;
  width: 100%;
}

.prompt_txt {
  width: 100%;
  font-size: 28rpx;
  text-align: center;
}

.getPhone {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  background: #169bd5;
  margin-top: 50rpx;
  font-size: 28rpx;
  border-radius: 16rpx;
}
