@import "../../app.wxss";
.shop_goods_title{
  height:80rpx;
  line-height: 80rpx;
  width:245rpx;
  font-size:30rpx;
}
.shop_goods_box{
  height:100rpx
}
.shop_goods_sort{
  width:100%;
  background: #fff;
  position: fixed;
  z-index: 444;
  height: 80rpx;
  line-height: 80rpx;
}
.shop_goods_box image{
  width:170rpx;
  height: 170rpx;
}
.shop_goods_contain{
  height:200rpx;
}
.shop_goods_box{
  width:180rpx;
}
.shop_goods_remark{
  padding:20rpx;
  height:160rpx;
  border-bottom: 2rpx solid #f1f1f1;
  width:500rpx;
}
.shop_goods_text{
  font-size: 28rpx;
  overflow:hidden;
text-overflow:ellipsis;
display:-webkit-box;
-webkit-box-orient:vertical;
-webkit-line-clamp:2;
}
.shop_good_price{
  font-size: 29rpx;
  color:#cf1414;
  margin-top:30rpx;
}
.shop_goods_invite image{
  margin-top:80rpx;
  width:100%;
  height: 80rpx;
  /* background: url('http://maichefu.oss-cn-beijing.aliyuncs.com/ToShop/shop_bg.png') */
}
.shop_goods_invite_text,.shop_goods_invite_btn{
  position: absolute;
}
.shop_goods_invite_text{
  margin-left: 35rpx;
  margin-top:-70rpx;
  font-size: 28rpx;
  color: #fff;

}
.shop_goods_invite_btn{
  width:60rpx
}
.shop_goods_invite_btn image{
  position: absolute;
  width:30rpx;
  height:20rpx;
margin-top:-60rpx;
margin-left:680rpx;

}
.active_null{
  height:50rpx;line-height:50rpx;margin-right:30rpx;width:200rpx;background:#f5f5f5
}
.active{
  height:46rpx;line-height:46rpx;margin-right:30rpx;width:200rpx;border:2rpx solid #4e93f3;color:#4e93f3
}
.priceinput{
  text-align: center;
  font-size: 26rpx;
  border:2rpx solid #838383;
  height:50rpx;
  line-height:50rpx;
  width:150rpx;
}
.savebtn, .resetbtn{
  width: 50%
}
.shopList_car{
  padding: 10rpx 30rpx;
  height: 50rpx;
  overflow: hidden;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.shopList_car_img{
  width: 30rpx;
  height: 20rpx;
  flex: 0 1 auto;
}
.shopList_car_van{
  width: 100%;
  height: 100%;
  line-height: 50rpx;
}
.shopList_car_van .van-checkbox__icon-wrap,
.shopList_car_van .van-checkbox__label{
  line-height: 35rpx;
}
.shopList_car_van .van-checkbox__icon{
  width: 35rpx;
  height: 35rpx;
}
.shopList_car_van .van-checkbox__icon .van-icon{
  line-height: 35rpx!important;
}
.shopList_car_van .shopList_car_label{
  font-size: 28rpx;
  color: #fff;
  line-height: 50rpx;
}
.shopList_car_text{
  display: inline-block;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: bottom;
}