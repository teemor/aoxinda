/* 商品数量加减 */

.editGoods {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  margin-left: 150rpx;
  text-align: center;
}

.goodsCount, .del, .change {
  flex-grow: 1;
}

.goodsCount {
  display: flex;
  width: 120rpx;
  height: 30rpx;
}

.goodsCount text {
  font-size: 25rpx;
}

.goodsCount view {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 50%;
}

.goodsCount text {
  width: 60rpx;
  height: 30rpx;
  text-align: center;
}

.goodsCount .normal {
  background: #707070;
}

.goodsCount .disabled {
  background: #ccc;
}

/* 删除商品按钮 */

.delGoods {
  background: red;
  color: #fff;
  width: 130rpx;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  right: 0;
  font-size: 24rpx;
}

