@import "../../app.wxss";

.upkeep_project_title {
  padding: 0 20rpx;
}

.upkeep_project_speity {
  padding-left: 60rpx;
}

.upkeep_project_remark {
  padding: 0 80rpx;
}

.upkeep_project_pro-contain {
  margin-top: 20rpx;
  padding: 0 60rpx;
}

.upkeep_project_pro-contain::after {
  clear: both;
  display: block;
  content: "";
}

.upkeep_project_pro-box {
  width: 615rpx;
}

.upkeep_project_pro-text {
  width: 460rpx;
  padding: 0 0rpx;
  position: relative;
}

.upkeep_project_pro-img {
  margin-right: 20rpx;
  width: 130rpx;
  height: 180rpx;
}

.upkeep_project_pro-img image {
  width: 130rpx;
  height: 130rpx;
}

.upkeep_project_pro-price {
  font-size: 24rpx;
  line-height: 30rpx;
}

.upkeep_project_pro-price_ {
  color: #000;
  font-size: 25rpx;
  line-height: 50rpx;
}

.upkeep_project_pro-title {
  margin-bottom: 8rpx;
  color: #000;
  font-size: 26rpx;
  line-height: 32rpx;
  width: 100%;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.upkeep_project_pro-subtitle {
  height: 60rpx;
  color: #888;
  font-size: 24rpx;
  line-height: 30rpx;
}

/* 商品数量加减 */

.editGoods {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  margin-left: 150rpx;
  text-align: center;
}

.goodsCount, .del, .change {
  flex-grow: 1;
}

.goodsCount {
  display: flex;
  width: 120rpx;
  height: 30rpx;
}

.goodsCount text {
  font-size: 25rpx;
}

.goodsCount view {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 50%;
}

.goodsCount text {
  width: 60rpx;
  height: 30rpx;
  text-align: center;
}

.goodsCount .normal {
  background: #707070;
}

.goodsCount .disabled {
  background: #ccc;
}

/* 删除商品按钮 */

.delGoods {
  background: red;
  color: #fff;
  width: 130rpx;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  right: 0;
  font-size: 24rpx;
}

