<view bindtap="carbeautyBtn" data-item='{{stores}}'>
  <view class="car_beauty_list-box cl">
    <view class="fl car_beauty_list-image">
        <image src="{{http+stores.img}}"/>
    </view>
    <view class="fl car_beauty_list-text">
      <view class="car_beauty_list-title">{{stores.storeName}}</view>
      <view class="car_beauty_list-price">已售{{stores.sales}}</view>
      <view class="cl car_beauty_list-location">
        <view class="fl">路北新区东方大厦C座552号</view>
        <view class="fl car_beauty_list-right">距您{{stores.km}}km</view>
      </view>
    </view>
  </view>
</view>