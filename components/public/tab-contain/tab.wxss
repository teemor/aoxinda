.zan-tab {
  height: 45px;
}

.zan-tab__bd {
  margin: auto;
  /* width: 400rpx; */
  display: flex;
  flex-direction: row;
  background: #fff;
}


.zan-tab__bd--fixed {
  position: fixed;
  top: 0;
  z-index: 2;
}

.zan-tab__item {
  flex: 1;
  display: inline-block;
  padding: 0 16rpx;
  line-height: 0;
  box-sizing: border-box;
  overflow: hidden;
  text-align: center;
  border-bottom: 4rpx solid #ececec;
}

.zan-tab__title {
  display: inline-block;
  padding: 0 10rpx;
  max-width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  box-sizing: border-box;
  word-break: keep-all;
  font-size: 28rpx;
  color: #969696;
}

.zan-tab__item--selected {
  border-bottom: 4rpx solid #bdbcbc;
}

.zan-tab__item--selected .zan-tab__title {
  padding: 0 10rpx;
  color: #282828;
}

.zan-tab__bd--scroll {
  display: block;
  white-space: nowrap;
}

.zan-tab__bd--scroll .zan-tab__item {
  min-width: 80px;
}
