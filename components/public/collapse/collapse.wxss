@import "../../../app.wxss";
.collapse_block{
    z-index: 222;
    padding-top:20rpx;
    display: block;
    height: 60rpx;
}
.collapse_contain{
    font-size:30rpx;
    width:90%;
    padding:10rpx 5%;
    border-bottom: 1px solid #e1e1e1
}
.collapse_hidden{
    position: relative;
    margin-top:10rpx;
    height:120rpx;
}
.collapse_image{
    width:100rpx;
    height:120rpx;
}
.collapse_image image{
    width: 100%;
    height:120rpx;
}
.collapse_text{
    text-align: center;
    font-size: 16rpx;
    position: absolute;
    bottom:10rpx;
    background:rgba(0,0,0,0.7);
    width:80rpx;
    padding:4rpx 10rpx;
    height:40rpx;
    color: #ffffff;
}
.collapse_hidden_text{
    font-size: 20rpx;margin-right: 60rpx;
    height:100rpx;
    line-height: 100rpx;
}
.collapse_hidden_pro{
    margin-right:60rpx;
}