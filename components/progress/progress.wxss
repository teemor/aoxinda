.process {
  clear: both;
  zoom: 1;
  width: 100%;
  background: #dcdcdc;
}

.rect-conner {
  height: 10rpx;
}

.progress-bar {
  width: 75%;
  background: linear-gradient(to right, #ead04f, #ea632e);
  transition: width 0.8s ease;
  animation: progressbar 7s 1;
}

@keyframes progressbar {
  from {
    width: 0;
  }

  to {
    width: 80%;
  }
}

.support_contain {
  width: 60%;
  float: left;
  padding: 0 5% 10rpx;
  font-size: 28rpx;
}

.support {
  color: #8d2020;
}

.total_support {
  color: #a7a8af;
}

.process-percent {
  float: right;
  color: #8d2020;
  font-size: 28rpx;
  width: 20%;
  text-align: right;
  padding-right: 5%;
}
